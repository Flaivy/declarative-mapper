{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "CommonJS",
        "removeComments": true,
        "sourceMap": true,
        "alwaysStrict": false,
        "outDir": "./dist",
        "lib": [
            "ES2018"
        ],
        "target": "ES2018",
        "declaration": true,
        "declarationDir": "./types",
        "strictNullChecks": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
